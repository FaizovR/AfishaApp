<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_tiny_4">

    <ProgressBar
        android:id="@+id/progress_bar_footer"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/spacing_normal_16"
        android:visibility="gone"
        tools:visibility="gone" />

    <TextView
        android:id="@+id/text_view_footer_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="@dimen/spacing_small_8"
        android:text="@string/error_with_internet_connections"
        android:textSize="@dimen/font_normal_16"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/button_footer_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginTop="@dimen/spacing_huge_32"
        android:text="@string/action_retry"

        />
</FrameLayout>